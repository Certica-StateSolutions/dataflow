@model List<DataFlow.Models.Agent>

@{
    ViewBag.Title = "Agents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<table id="tblAgents" class="table table-striped table-hover table-bordered table-responsive" data-sorting="true" data-filtering="true">
    <thead>
    <tr>
        <th data-sortable="false" data-filterable="false"></th>
        <th>Source</th>
        <th>Type</th>
        <th data-type="number">Records</th>
        <th data-type="date" data-format-string="yyyy-MM-dd hh:MM tt">Last Executed</th>
        <th>Enabled</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var a in Model)
    {
        <tr>
            <td>Edit</td>
            <td>@a.Name</td>
            <td>@a.AgentTypeCode</td>
            <td>@a.File.Count</td>
            <td>@a.LastExecuted.GetValueOrDefault(new DateTime(1900,01,01)).ToString("yyyy-MM-dd hh:MM tt")</td>
            <td>@a.Enabled</td>
        </tr>
    }
    </tbody>
</table>
@section scripts
{
    <script type="text/javascript">
        $(function($){
            $('#tblAgents').footable();
        });
    </script>
}