@model List<DataFlow.Models.Agent>

@{
    ViewBag.Title = "Agents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<table id="tblAgents" class="table table-striped table-hover table-bordered table-responsive" data-sorting="true" data-filtering="true">
    <thead>
    <tr>
        <th>Source</th>
        <th>Type</th>
        <th data-type="number">Records</th>
        <th data-type="date" data-format-string="yyyy-MM-dd hh:MM tt">Last Executed</th>
        <th>Enabled</th>
        <th data-sortable="false" data-filterable="false"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var a in Model)
    {
        <tr>
            <td>@a.Name</td>
            <td>@a.AgentTypeCode</td>
            <td data-type="number">@a.File.Count</td>
            <td data-type="date" data-format-string="yyyy-MM-dd hh:MM tt">@(a.LastExecuted?.ToString("yyyy-MM-dd hh:MM tt"))</td>
            <td>@a.Enabled</td>
            <td>Edit</td>
        </tr>
    }
    </tbody>
</table>
@using (Html.BeginForm("UploadFile", "Agent", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <h4>Manual Upload</h4>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.Label("File", new { @class = "control-label" })
        </div>
        <div class="col-sm-10">
            @Html.TextBox("File", null, new { @class = "form-control", type = "file"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.Label("Agents", new { @class = "control-label" })
        </div>
        <div class="col-sm-10">
            @Html.DropDownList("Agents", (IEnumerable<SelectListItem>)ViewBag.Agents, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button id="btnUpload" type="submit" class="btn btn-primary">Upload</button>
        </div>
    </div>
    <div>
        @TempData["FileStatus"]
    </div>
}
@section scripts
{
    <script type="text/javascript">
        $(function($){
            $('#tblAgents').footable();
        });
    </script>
}