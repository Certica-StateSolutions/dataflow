@model List<DataFlow.Web.Models.SchoolViewModel.Grid>

@{
    ViewBag.Title = "Schools";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div style="padding-bottom: 10px;">
    @Html.ActionLink("Add School", "Add", null, new { @class = "btn btn-primary" })
</div>
<table id="tblSchools" class="table table-striped table-hover table-bordered table-responsive" data-sorting="true" data-filtering="true">
    <thead>
        <tr>
            <th>School</th>
            <th>Abbreviation</th>
            <th>District</th>
            <th data-sortable="false" data-filterable="false"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
        <tr>
            <td>@Html.ActionLink(s.Name, "Details", new { s.Id })</td>
            <td>@s.Abbreviation</td>
            <td>@s.District</td>
            <td style="text-align: center;">@Html.ActionLink("Edit", "Edit", new { s.Id })</td>
        </tr>
        }
    </tbody>
</table>
@section scripts
{
    <script type="text/javascript">
        $(function($){
            $('#tblSchools').footable();
        });
    </script>
}