@model DataFlow.Models.BootstrapData

@Html.AntiForgeryToken()
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    <div class="col-sm-2">
        @Html.LabelFor(m => m.Entity, new { @class = "control-label" })
    </div>
    <div class="col-sm-10">
        @Html.DropDownListFor(m => m.EntityId, (IEnumerable<SelectListItem>)ViewBag.Entities, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.EntityId)
    </div>
</div>
<div class="form-group">
    <div class="col-sm-2">
        @Html.LabelFor(m => m.ProcessingOrder, new { @class = "control-label" })
    </div>
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.ProcessingOrder, new { @class = "form-control", type = "number", min="0", placeholder = "Process Order" })
        <span class="help-block">This will "insert" the data into the table at this position and will adjust the existing bootstrap data accordingly.</span>
        @Html.ValidationMessageFor(m => m.ProcessingOrder)
    </div>
</div>
<div class="form-group">
    <div class="col-sm-2">
        @Html.LabelFor(m => m.Data, new { @class = "control-label" })
    </div>
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.Data, new { @class = "form-control", type = "text", placeholder = "JSON Data", style = "height:500px;" })
        @Html.ValidationMessageFor(m => m.Data)
    </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.ProcessedDate)
        <button id="btnSubmit" type="submit" class="btn btn-primary">Save Lookup</button>
    </div>
</div>