@model List<DataFlow.Models.Lookup>

@{
    ViewBag.Title = "Lookups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div style="padding-bottom: 10px;">
    @Html.ActionLink("Add Lookup", "Add")
</div>
<table id="tblLookups" class="table table-striped table-hover table-bordered table-responsive" data-sorting="true" data-filtering="true" data-paging="true" data-paging-size="20">
    <thead>
    <tr>
        <th>Group Set</th>
        <th>Key</th>
        <th>Value</th>
        <th data-sortable="false" data-filterable="false"></th>
        <th data-sortable="false" data-filterable="false"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.GroupSet</td>
            <td>@m.Key</td>
            <td>@m.Value</td>
            <td>@Html.ActionLink("Edit", "Edit", new { m.Id })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { m.Id })</td>
        </tr>
    }
    </tbody>
</table>
@section scripts
{
<script type="text/javascript">
    $(function($){
        $('#tblLookups').footable();
    });
</script>
}