@model List<DataFlow.Models.DataMap>

@{
    ViewBag.Title = "Maps";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div style="padding-bottom: 10px;">
    @Html.ActionLink("Add Map", "Add", null, new { @class = "btn btn-primary" }) | @Html.ActionLink("Go to Advanced Data Mapper", "Index", new{ Controller = "DataMapper"}, new { @class = "btn btn-primary" })
</div>
<table id="tblMaps" class="table table-striped table-hover table-bordered table-responsive" data-sorting="true" data-filtering="true">
    <thead>
        <tr>
            <th>Name</th>
            <th>Entity</th>
            <th data-sortable="false" data-filterable="false"></th>
            <th data-sortable="false" data-filterable="false"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Name</td>
                <td>@m.Entity.Name</td>
                <td>@Html.ActionLink("Edit", "Edit", new { m.Id })</td>
                <td>@Html.ActionLink("Delete", "Delete", new { m.Id })</td>
            </tr>
        }
    </tbody>
</table>
@section scripts
{
    <script type="text/javascript">
        $(function ($) {
            $('#tblMaps').footable();
        });
    </script>
}