<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Data Flow</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="@ViewBag.CompanyLogo" style="height: 45px; float: left;"/>
                @Html.ActionLink("Data Flow Admin", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Schools", "Index", "School")</li>
                        <li>@Html.ActionLink("Agents", "Index", "Agent")</li>
                        <li>@Html.ActionLink("Maps", "Index", "Map")</li>
                        <li>@Html.ActionLink("Logs", "Index", "Log")</li>
                        <li>@Html.ActionLink("Lookups", "Index", "Lookup")</li>
                        <li>@Html.ActionLink("Assessments", "Index", "Assessment")</li>
                        <li>@Html.ActionLink("Config", "Index", "Configuration")</li>
                    </ul>
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <img src="~/Content/Images/edfi-logo.png" alt="ed-fi alliance" title="ed-fi alliance" style="width: 100px; margin-right: 15px;" />Powered by Ed-Fi Technology
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
